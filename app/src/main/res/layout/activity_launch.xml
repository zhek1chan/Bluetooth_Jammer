<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/gray"
	android:fitsSystemWindows="true"
	android:padding="16dp">

	<!-- Текст приветствия -->
	<TextView
		android:id="@+id/welcomeText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="16dp"
		android:text="Hello there!"
		android:textColor="@color/cardview_light_background"
		android:textSize="30sp"
		android:textStyle="bold"
		app:layout_constraintBottom_toTopOf="@id/centerButton"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />


	<TextView
		android:id="@+id/please"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="16dp"
		android:paddingTop="15dp"
		android:text="Пожалуйста согласитесь\nсо всеми запросами разрешений,\nони нужны для корректной работы"
		android:textAlignment="center"
		android:textColor="@color/cardview_light_background"
		android:textSize="22sp"
		android:textStyle="italic"
		app:layout_constraintBottom_toTopOf="@id/centerButton"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="@id/welcomeText" />

	<!-- Кнопка по центру экрана -->
	<Button
		android:id="@+id/centerButton"
		android:layout_width="200dp"
		android:layout_height="70dp"
		android:backgroundTint="@color/green_prime"
		android:paddingHorizontal="32dp"
		android:paddingVertical="12dp"
		android:text="НАЖМИ МЕНЯ"
		android:textColor="#FFFFFF"
		android:textSize="19sp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<!-- Дополнительный текст под кнопкой (опционально) -->
	<TextView
		android:id="@+id/subText"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:text="Нажмите кнопку, чтобы продолжить"
		android:textColor="@color/cardview_light_background"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@id/centerButton" />

</androidx.constraintlayout.widget.ConstraintLayout>